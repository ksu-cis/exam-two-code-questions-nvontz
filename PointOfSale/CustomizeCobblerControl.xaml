<UserControl x:Class="ExamTwoQuestions.PointOfSale.CustomizeCobblerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamTwoQuestions.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".25*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock FontSize="20">Customize Cobbler</TextBlock>
        <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36"  Grid.Column="1" Grid.Row="2" IsChecked="{Binding Path=WithIceCream}">WithIceCream</CheckBox>
        <Button Grid.Row="1" Name="PeachButton" Tag="Peach">Peach</Button>
        <Button Grid.Column="1" Grid.Row="1" Name="CherryButton" Tag="Cherry">Cherry</Button>
        <Button Grid.Column="2" Grid.Row="1" Name="BlueBerryButton" Tag="Blueberry">BlueBerry</Button>
        
        
        
    </Grid>
</UserControl>
